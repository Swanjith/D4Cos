name=xorg-font-util
from_source=xorg-font-util
revision=1
imagedeps="build-essential"
hostdeps="gcc binutils autoconf automake libtool pkg-config xorg-proto xorg-macros"
deps="core-libs"

build() {
	"${source_dir}"/configure --prefix="${prefix}"
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
	post_package_strip
}
